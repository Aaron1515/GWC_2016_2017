<h2>Welcome to Sharing Hands! Here's the first step in signing up...</h2>

<div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div>     
      <label for="fname">First Name</label>
      <input type="text" id="1name" name="firstname" placeholder="Your name...">
    </div>

    <div>
      <label for="lname">Last Name</label>
      <input type="text" id="lname" name="lastname" placeholder="Your last name...">
    </div>

    <div>
      <label for="user">Username</label>
      <input type="text" id="user" name="Username" placeholder="Choose a username...">
    </div>





    <div class="email_field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "input_text" %>
    </div>

    <div class="password_field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: "input_text" %>
    </div>

    <div class="password_field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "input_text" %>
    </div>

    <div>
    <label for="continent">Continent</label>
    <select id="continent" name="continent">
      <option value="North America">North America</option>
      <option value="South America">South America</option>
      <option value=Africa>Africa</option>
      <option value=Europe>Europe</option>
      <option value=Asia>Asia</option>
      <option value=Australia>Australia</option>
    </select>
    </div>

    <div class="actions submit_btn">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>
</div>
<%= render "devise/shared/links" %>




<style>



/*Rails code*/



  .input_text, select {
    width: 100%;
    padding:12px 20px;
    padding right:50px;
    margin: 8px 0;
    display: inline-block;
    border: 2px solid #ccc;
    transition: 0.3s;
    outline: none;
    border-radius: 4px;
    box-sizing: border-box;
    border-color: #f88379;
  }

  .input_text:focus {
    border: 3px solid #fdd9d6;
  }



  .submit_btn {
    width: 100%;
    background-color: #fff588;
    color: white;
    padding: 0;
    margin: 0;
    border:none;
    border-radius: 4px;
    cursor: pointer;
  }

  .submit_btn:hover {
    background-color:#f88379
  }



  h2{
    color:#ffffff;
    margin: 8px 2px;
    display: inline-block;
    border: 5px solid #00a9c2;
    outline: none;
    border-radius:2px;
    width:99%;
    background:#00a9c2;
  }

  input[type=text], select {
    width: 100%;
    padding:12px 20px;
    padding right:50px;
    margin: 8px 0;
